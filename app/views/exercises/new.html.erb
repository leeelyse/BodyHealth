<!-- Validation failure messages -->

<% if @exercise.errors.any? %>
  <% @exercise.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Exercise</h3>
      </div>
      <div class="panel-body">
        <form action="/create_exercise" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @exercise.name %>">
            </div>
          </div>

          <!-- Label and input for picture -->
          <div class="form-group">
            <label for="picture" class="col-sm-2 control-label">
              Picture
            </label>
            <div class="col-sm-10">
              <input type="text" id="picture" name="picture" placeholder="Picture" class="form-control" value="<%= @exercise.picture %>">
            </div>
          </div>

          <!-- Label and input for time -->
          <div class="form-group">
            <label for="time" class="col-sm-2 control-label">
              Time
            </label>
            <div class="col-sm-10">
              <input type="text" id="time" name="time" placeholder="Time" class="form-control" value="<%= @exercise.time %>">
            </div>
          </div>

          <!-- Label and input for calories_consumed -->
          <div class="form-group">
            <label for="calories_consumed" class="col-sm-2 control-label">
              Calories consumed
            </label>
            <div class="col-sm-10">
              <input type="text" id="calories_consumed" name="calories_consumed" placeholder="Calories consumed" class="form-control" value="<%= @exercise.calories_consumed %>">
            </div>
          </div>

          <!-- Label and input for instructions -->
          <div class="form-group">
            <label for="instructions" class="col-sm-2 control-label">
              Instructions
            </label>
            <div class="col-sm-10">
              <textarea id="instructions" name="instructions" placeholder="Instructions" class="form-control" rows="3"><%= @exercise.instructions %></textarea>
            </div>
          </div>

          <!-- Label and input for muscle_group_id -->
          <div class="form-group">
            <label for="muscle_group_id" class="col-sm-2 control-label">
              Muscle group
            </label>
            <div class="col-sm-10">
              <input type="text" id="muscle_group_id" name="muscle_group_id" placeholder="Muscle group" class="form-control" value="<%= @exercise.muscle_group_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Exercise
              </button>
              or
              <a href="/exercises">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
